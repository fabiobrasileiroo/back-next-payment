datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  description String?
  companyId   Int
  company     Company  @relation(fields: [companyId], references: [id])
}

model Company {
  id       Int       @id @default(autoincrement())
  name     String
  units    Unit[]
  products Product[]
}

model Unit {
  id       Int       @id @default(autoincrement())
  name     String
  company  Company   @relation(fields: [companyId], references: [id])
  companyId Int
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String
  password String
  role     UserRole
}

enum UserRole {
  USER
  ADMIN
}